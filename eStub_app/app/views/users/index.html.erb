
<h1>Listing Users index.html.erb</h1>

<table>
  <thead>
    <tr>
      <th>Profile pic</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.profile_pic %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <%# removed shoe=w, edit, destroy %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

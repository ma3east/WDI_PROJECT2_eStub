<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<h1>Edit User Form</h1>

<%# render 'form' %>

<div class="field">
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %>
</div>
<div class="field">
  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %>
</div>
<div class="field">
  <%= f.label :email %><br>
  <%= f.text_area :email %>
</div>
<div class="field">
  <%= f.label :date_of_birth %><br>

  <%= f.date_select :date_of_birth, :order => [:day, :month, :year], :start_year => 1940, :end_year => Time.now.year - 13 %>
</div>

<div class="field">
  <%= f.label :profile_pic %><br>
  <%= f.text_area :profile_pic %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>



<h1>Events#show User</h1>
<p>Find me in app/views/events/underscore_showUser.html.erb</p>

<ul>

  <li>Name: <%= @event.name %></li>
  <li>Date: <%= @event.date %></li>
  <li>Venue: <%= @event.venue %></li>
  <li>City: <%= @event.city %></li>
  <li><%= @event.price %></li>
  <li><%= @event.accompanied_by %></li>
  <li>Rating: <%= @event.rating %></li>

  <% if current_user == @event.user %>

  <li>Uploaded by: <%= link_to @event.user.first_name, user_path(@event.user.id) %></li>

</ul>
<ul>
  <li>
    <% if @event.stub_file_upload.present? %>
    <%= image_tag @event.stub_file_upload %>
    <% elsif %>
    <% @event.event_url.present? %>
    <%= image_tag @event.event_url %>
    <% else %>
    "No image available."
    <% end %>
  </li>
</ul>

<ul>
  <li>Comments: <%= @event.description %></li>
</ul>
<li>
  <% if @event.user.id == current_user.id %>
  <%= link_to "Edit Event", edit_event_path(@event) %>
  <%= link_to 'Delete Event', @event, method: :delete, data: { confirm: 'Are you sure?' } %>
  <%= link_to "Back", current_user %>
  <% end %>
</li>
<% end %>
</ul>

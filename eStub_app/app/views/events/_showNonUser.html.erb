<h1>Events#show Non User</h1>
<p>Find me in app/views/events/showNon.html.erb</p>

<ul>
  <p>Event details</p>
  <li>Name: <%= @event.name %></li>
  <li>Date: <%= @event.date %></li>
  <li>Venue: <%= @event.venue %></li>
  <li>City: <%= @event.city %></li>
  <li>Rating Scale (0 - 5): <%= @event.rating %></li>

  <li>Uploaded by: <%= link_to @event.user.first_name, user_path(@event.user.id) %></li>

</ul>
<ul>
  <li>
    <% if @event.stub_file_upload.present? %>
    <%= image_tag @event.stub_file_upload %>
    <% elsif %>
    <% @event.event_url.present? %>
    <%= image_tag @event.event_url %>
    <% else %>
    "No image available."
    <% end %>
  </li>
</ul>

<ul>
  <li>Comments: <%= @event.description %></li>
</ul>
<ul>
  <li>
    <%= link_to "Event Index", events_path %>
    
  </li>
</ul>

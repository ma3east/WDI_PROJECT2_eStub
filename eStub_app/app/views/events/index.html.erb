<h1>Events Index</h1>

<% if current_user %>
<h3 class="add">Add event:</h3>
<p class="add"> <%= link_to "Add", new_event_path  %> </p>
<h2>My Events</h2>
<% @events.each do |event| %>
<ul>
  <% if event.user.id == current_user.id %>
  <li><%= link_to event.name, event %></li>
  <% end %>
</ul>
<% end %>

<% end %>

<h2>All Users Shared Events</h2>

<% @events.each do |event| %>
<ul>
  <% if event.share == "Yes" %>
  <li><%= link_to event.name, event %></li>
  <% end %>
</ul>

<% end %>


